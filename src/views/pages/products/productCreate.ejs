<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head.ejs') %>
    <title><%= title %></title>
</head>

<body>
    <header>
        <%- include('../../partials/header.ejs') %>
    </header>

    <section class= "createProduct">
       
        <div class="formWrapper">

            <div class="create-product-introWrapper">
                <h1 class="small-title-createProduct">
                    <% if (product === null) { %>
                    Crear producto
                    <% } else { %>
                        Editar un producto
                    <% } %>
                </h1>
            </div>

        <div class="form-create-product">
       
            <% if (product === null) { %>
                <form action="/productos/crear" method="POST">
                <% } else { %>        
                <form action="/productos/editar/<%= product?.id %>?_method=PUT" method="POST">
                <% } %>
        
         
                <div class="input-wrapper">
                    <input class="input"  type="text" name="productName"  placeholder=" " id="productName" value="<%= product?.productName %>">
                    <label for="productName" class="label">Nombre del producto</label>
                </div>

                <div class="input-wrapper">
                    <input class="input" type="number" name="price"  placeholder=" " id="price" value="<%= product?.price %>">
                    <label for="price" class="label">Precio</label>
                </div>

                <div class="input-wrapper">

                    <label for="type">Nuevo/Usado</label>

                    <select name="type" id="type">
                      <option value="nuevo">Nuevo</option>
                      <option value="usado"  >Usado</option>
                    </select> 



                </div>

                <div class="input-wrapper">

                    <label for="category">Categoria</label>

                    <select name="category" id="category">
                      <option value="nuevo">Consolas</option>
                      <option value="nuevo">Juegos</option>
                      <option value="usado">Accesorios</option>
                      <option value="usado">Computadores </option>
                      <option value="usado">Sillas Gamer</option>
                    </select>

                </div>


                <div class="input-wrapper">

                    <label for="subcategory">Juegos</label>

                    <select name="subcategory" id="subcategory">
                      <option value="PS4">PS4</option>
                      <option value="PS5">PS5</option>
                      <option value="Xbox one">Xbox one</option>
                      <option value="Nintendo Switch">Nintendo Switch</option>
                      <option value="Nintendo 3DS">Nintendo 3DS</option>
                      <option value="PSE">PS3</option>
                    </select>

                </div>

                <div class="input-wrapper">

                    <label for="hasEdition">Tiene Edicion?</label>

                    <select name="hasEdition" id="hasEdition">
                      <option value="true">Si</option>
                      <option value="false">No</option>
                    
                    </select>

                </div>


                <div class="input-wrapper">

                    <label for="edition">Edicion</label>

                    <select name="edition" id="edition">
                      <option value="Standar">Standar</option>
                      <option value="Digital">Digital</option>
                      <option value="Coleccionista">Coleccionista</option>
                    </select>

                </div>


                    <div class="input-wrapper">

                        <label for="img-1">Imagen principal</label>

                        <input type="file"
                            id="img-1" name="img-1"
                            accept="image/png, image/jpeg">
    
                    </div>

                    <div class="input-wrapper">

                        <label for="img-2">Imagen Secundaria</label>

                        <input type="file"
                            id="img-2" name="img-2"
                            accept="image/png, image/jpeg">
    
                    </div>


                    
                <div class="input-wrapper">
                    <input class="input" type="number" name="stock" value="<%= product?.stock %>"  placeholder=" " id="stock">
                    <label for="stock" class="label">Stock</label>
                </div>

                <button class="btn-create-product">Crear producto</button>

            </form> 
        </div>

        </div>

    </section>

    <footer>
        <%- include('../../partials/footer.ejs') %>
    </footer>
</body>

</html>